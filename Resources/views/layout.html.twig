<!DOCTYPE html>
<!--[if IE 8]>
<html lang="{{ app.request.locale }}" class="ltie9"><![endif]-->
<!--[if IE 9]>
<html lang="{{ app.request.locale }}" class="ie9"><![endif]-->
<!--[if !IE]><!-->
<html lang="{{ app.request.locale }}"> <!--<![endif]-->
<head>
	<title>{% block title %}{{ cameleon.project_title }}{% endblock %}</title>
	{% block meta %}
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		{% block meta_og %}{% endblock %}
		<meta name="description" content="{% block meta_description %}{% endblock %}">
	{% endblock %}


	{% block stylesheets %}
		{% block stylesheet_bootstrap %}
			<!-- Bootstrap -->
			{% if not cameleon.bootstrap.use_cdn or app.debug %}
				<link href="{{ asset('bundles/escameleon/css/bootstrap.min.css') }}" rel="stylesheet">
			{% else %}
				<link href="//netdna.bootstrapcdn.com/bootstrap/3.2.2/css/bootstrap.min.css" rel="stylesheet">
			{% endif %}
		{% endblock %}
		{% for src in cameleon.cssIncludes %}
			<link href="{{ src }}" rel="stylesheet">
		{% endfor %}
	{% endblock %}

	{% block javascript_head %}
		<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
		<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
		<!--[if lt IE 9]>
		<script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
		<script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
		<![endif]-->
	{% endblock %}
</head>
<body{% block body_attr %}{% endblock %}>
{% block body %}
{% endblock %}

{% block javascripts_bottom %}
	<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
	{% if not cameleon.bootstrap.use_cdn or app.debug %}
	<script src="{{ asset('bundles/escameleon/js/jquery.min.js') }}"></script>
	{% else %}
	<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
	{% endif %}
	<!-- Include all compiled plugins (below), or include individual files as needed -->
	{% if not cameleon.bootstrap.use_cdn or app.debug %}
	<script src="{{ asset('bundles/escameleon/js/bootstrap.min.js') }}"></script>
	{% else %}
	<script src="//netdna.bootstrapcdn.com/bootstrap/3.2.2/js/bootstrap.min.js"></script>
	{% endif %}
{% endblock %}
{% for src in cameleon.javascriptBottom.includes %}
	<script src="{{ src }}"></script>
{% endfor %}
{% for code in cameleon.javascriptBottom.code %}
	{{ code }}
{% endfor %}
{% block google_analytics %}
	{% if not app.debug and cameleon.host_env == 'prod' %}
		{{ es_google_analytics_code('main') }}
	{% endif %}
{% endblock %}
</body>
</html>